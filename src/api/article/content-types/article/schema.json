{
  "kind": "collectionType",
  "collectionName": "articles",
  "info": {
    "singularName": "article",
    "pluralName": "articles",
    "displayName": "Article",
    "description": "Create your blog content"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string"
    },
    "excerpt": {
      "type": "string"
    },
    "content": {
      "type": "richtext"
    },
    "author": {
      "type": "string"
    },
    "date": {
      "type": "datetime"
    },
    "category": {
      "type": "enumeration",
      "enum": [
        "Technology",
        "Projects",
        "Industry News",
        "Maintenance",
        "Innovation"
      ]
    },
    "tags": {
      "type": "component",
      "component": "article.tags",
      "repeatable": true
    },
    "image": {
      "type": "media",
      "multiple": false,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "pic": {
      "type": "component",
      "component": "article.pic",
      "repeatable": true
    }
  }
}
